# set the correct term
set -g default-terminal "screen-256color"

# unbind default Ctrl-b
unbind C-b

# set prefix to Ctrl-a
set -g prefix C-a

# start window numbering at 1
set -g base-index 1

# start pane numbering at 1
set -g pane-base-index 1

# turn on window titles
set -g set-titles on

# specify what titles should look like
set -g set-titles-string '#I | #W'

# ideally the status-position will be at the top but it's only supported >1.8
set -g status-position top

# automagically rename windows depending on what's running
set -g automatic-rename on

# don't wait for repeated commands
set -g repeat-time 0

set -g window-status-current-style fg=black,bg=colour230

set -g window-status-activity-style fg=colour235,bg=colour230

set -g window-status-bell-style fg=colour235,bg=colour230

set -g message-style fg=white,bg=black

set -g pane-active-border-style fg=colour217,bg=black

set -g status-style fg=white,bg=colour235

set -g window-status-format " "

# status-left content
set -g status-left '#[bg=colour217] #[fg=colour235]#P '

# status-right content
set -g status-right '%a %d %B %y @ %H:%M | #h'

# windows with activity are highlighted in the status bar
setw -g monitor-activity on

# 0 delay when pressing ESC key /thx @karlfreeman
set -s escape-time 0
