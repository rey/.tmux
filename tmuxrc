#
# Global stuff
#

# set the correct term
set -g default-terminal "screen-256color"

# unbind default Ctrl-b
unbind C-b

# set prefix to Ctrl-a
set -g prefix C-a

# 0 delay when pressing ESC key
set -s escape-time 0

# don't wait for repeated commands
set -g repeat-time 0

#
# Status bar
#

# set status bar position to be at the top (only supported >1.8)
set -g status-position top

# status-left content
set -g status-left '(#P) '

# status-right content
set -g status-right '%a %d %B %y @ %H:%M | #h'

# Monitor for activity in the window
setw -g monitor-activity on

# Set status line style
set -g status-style fg=black,bg=white

# Set status line style for the currently active window
set -g window-status-current-style fg=white,bg=black

# Set status line style for windows with an activity alert
set -g window-status-activity-style none

# Set status line style for windows with a bell alert
set -g window-status-bell-style none

#
# Windows
#

# start window numbering at 1
set -g base-index 1

#
# Panes
#

# start pane numbering at 1
set -g pane-base-index 1

#
# Misc
#

# when you open a pane it'll show a colour on the divider
set -g pane-active-border-style none
